     <m:mrow>
       <m:mi>n</m:mi>
       <m:mo form="infix">→</m:mo>
       <m:mi>∞</m:mi>
     </m:mrow>
   </m:math>
   <m:math mode="display" display="block">
     <m:mrow>
       <m:mrow>
         <m:msub>
           <m:mo form="prefix" largeop="true">∮</m:mo>
           <m:mi>S</m:mi>
         </m:msub>
         <m:mrow>
           <m:mrow>
             <m:mover accent="true">
               <m:mi>F</m:mi>
               <m:mo accent="true" form="postfix">⃗</m:mo>
             </m:mover>
             <m:mo form="infix">⋅</m:mo>
             <m:mi>d</m:mi>
           </m:mrow>
           <m:mo/>
           <m:mover accent="true">
             <m:mi>a</m:mi>
             <m:mo accent="true" form="postfix">⃗</m:mo>
