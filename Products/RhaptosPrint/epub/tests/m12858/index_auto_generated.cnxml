     </m:mrow>
   </m:math>
   <m:math mode="display" display="block">
     <m:mrow>
       <m:mstyle displaystyle="true">
         <m:mtable>
           <m:mtr>
             <m:mtd groupalign="right left">
               <m:maligngroup/>
               <m:mrow>
                 <m:mrow>
                   <m:msub>
                     <m:mo form="prefix" largeop="true">∮</m:mo>
                     <m:mi>S</m:mi>
                   </m:msub>
                   <m:mrow>
                     <m:mrow>
                       <m:mover accent="true">
                         <m:mi>F</m:mi>
                         <m:mo accent="true" form="postfix">⃗</m:mo>
                       </m:mover>
                       <m:mo form="infix">⋅</m:mo>
                       <m:mi>d</m:mi>
                     </m:mrow>
                     <m:mo/>
                     <m:mover accent="true">
                       <m:mi>a</m:mi>
                       <m:mo accent="true" form="postfix">⃗</m:mo>
                     </m:mover>
                   </m:mrow>
                 </m:mrow>
                 <m:maligngroup/>
                 <m:mo form="infix">=</m:mo>
                 <m:mrow>
                   <m:munderover>
                     <m:mo movablelimits="true" form="prefix" largeop="true">∑</m:mo>
                     <m:mrow>
                       <m:mi>i</m:mi>
                       <m:mo form="infix">=</m:mo>
                       <m:mn>1</m:mn>
                     </m:mrow>
                     <m:mi>n</m:mi>
                   </m:munderover>
                   <m:mrow>
                     <m:msub>
                       <m:mo form="prefix" largeop="true">∮</m:mo>
                       <m:msub>
                         <m:mi>S</m:mi>
                         <m:mi>i</m:mi>
                       </m:msub>
                     </m:msub>
                     <m:mrow>
                       <m:mrow>
                         <m:mover accent="true">
                           <m:mi>F</m:mi>
                           <m:mo accent="true" form="postfix">⃗</m:mo>
                         </m:mover>
                         <m:mo form="infix">⋅</m:mo>
                         <m:mi>d</m:mi>
                       </m:mrow>
                       <m:mo/>
                       <m:mover accent="true">
                         <m:msub>
                           <m:mi>a</m:mi>
                           <m:mi>i</m:mi>
                         </m:msub>
                         <m:mo accent="true" form="postfix">⃗</m:mo>
                       </m:mover>
