               </m:mrow>
             </m:mfrac>
           </m:mrow>
           <m:mo symmetric="true" stretchy="true" fence="true" form="postfix">]</m:mo>
         </m:mrow>
       </m:mrow>
     </m:mrow>
   </m:math>
</para>
<para id="id3304828">
   or
   <m:math mode="display" display="block">
     <m:mrow>
       <m:mrow>
         <m:msub>
           <m:mo form="prefix" largeop="true">∮</m:mo>
           <m:msub>
             <m:mi>S</m:mi>
             <m:mi>i</m:mi>
           </m:msub>
         </m:msub>
         <m:mrow>
