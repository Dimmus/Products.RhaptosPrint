         </m:mrow>
       </m:mrow>
       <m:mo form="infix">=</m:mo>
       <m:mrow>
         <m:msub>
           <m:mo form="prefix" largeop="true">∮</m:mo>
           <m:mi>V</m:mi>
         </m:msub>
         <m:mrow>
           <m:mrow>
             <m:mover accent="true">
               <m:mo form="prefix">∇</m:mo>
               <m:mo accent="true" form="postfix">⃗</m:mo>
             </m:mover>
             <m:mo form="infix">⋅</m:mo>
             <m:mover accent="true">
               <m:mi>F</m:mi>
               <m:mo accent="true" form="postfix">⃗</m:mo>
             </m:mover>
