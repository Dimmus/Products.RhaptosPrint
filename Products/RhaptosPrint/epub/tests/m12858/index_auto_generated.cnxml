           <m:mtr>
             <m:mtd groupalign="right left">
               <m:maligngroup/>
               <m:maligngroup/>
               <m:mo form="infix">=</m:mo>
               <m:mrow>
                 <m:munderover>
                   <m:mo movablelimits="true" form="prefix" largeop="true">∑</m:mo>
                   <m:mrow>
                     <m:mi>i</m:mi>
                     <m:mo form="infix">=</m:mo>
                     <m:mn>1</m:mn>
                   </m:mrow>
                   <m:mi>n</m:mi>
                 </m:munderover>
                 <m:mrow>
                   <m:mrow>
                     <m:mover accent="true">
